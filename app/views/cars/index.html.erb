<div class="container">
  <h1><strong>Car Junction</strong></h1>
  <p>Drive the Experience, Rent the Journey</p>
  <% @cars.each do |car| %>
    <%= link_to car_path(car) do %>
      <div class="car-card my-3">
        <% if car.image.present? %>
          <%= cl_image_tag car.image.key,class: "car-image", alt: "Car Image" %>
        <% else %>
          <p>No image available</p>
        <% end %>
        <h3><strong><%= car.name %></strong></h3>
        <h5><%= car.year %></h5>
        <h5><%= car.mileage %></h5>
        <h5><%= car.price_per_day %></h5>
        <p><%= car.description %></p>
      </div>
    <% end %>
  <% end %>
</div>
