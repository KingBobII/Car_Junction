<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new booking for a <%= @car.name %></h3>
        <%= simple_form_for [@car, @booking] do |f| %>
          <%= f.input :start_date, placeholder: 'From' %>
          <%= f.input :end_date, placeholder: 'From' %>
          <i class="fa fa-paper-plane"><%= f.submit%></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
