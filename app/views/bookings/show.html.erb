<div class="container">
  <h1><%= "Hello, #{@booking.user.first_name}, here are the details for your listing:" %></h1>
  <div class="container mt-2">
    <p><%= "Your listing for #{@car.name} begins on #{@booking.start_date} and will end on #{@booking.end_date} . The total price per day for this booking is #{@booking.price_per_day}" %>
    </p>
  </div>
  <div class="mt-2">
     <%= link_to "See all my bookings", bookings_path(current_user) %>
     <%= button_to "Delete this booking", @booking, method: :delete %>
  </div>
</div>
